<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/AppTextField</item>
    </style>

    <!--    for edit text-->
    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>
    <!--    for button style-->
    <style name="buttonStyle" parent="">
        <item name="android:textSize">22sp</item>
        <item name="android:background">@color/colorPrimary</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="fontFamily">@font/lato_bold</item>
        <item name="color">@android:color/white</item>
    </style>
    <!--    for text style -->
    <style name="textStyle" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@android:color/black</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>
</resources>